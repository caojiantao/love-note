.album-banner {
  position: relative;
  height: 150px;
}

.album-cover {
  width: 100%;
  height: 100%;
}

.album-title {
  position: absolute;
  color: #fff;
  left: 10px;
  bottom: 10px;
  font-weight: 700;
}

.btn-upload {
  width: 90% !important;
  margin: 10px;
  font-weight: 0;
}

.image-wrapper {
  position: relative;
  width: 33%;
  padding-top: 33%;
  float: left;
  margin-bottom: .5%;
  margin-right: .5%;
}

.image-wrapper:nth-child(3n) {
  margin-right: 0;
}

.image-wrapper image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
