.image-list:after{
  content: '';
  display: block;
  clear: both;
}

.image-wrapper {
  position: relative;
  width: 33%;
  padding-top: 33%;
  float: left;
  margin-bottom: .5%;
  margin-right: .5%;
}

.image-wrapper:nth-child(3n) {
  margin-right: 0;
}

.image-wrapper image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.album {
  margin-top: 5px;
  background-color: #f6f6f6;
  display: flex;
  align-items: center;
}

.album image {
  width: 50px;
  height: 50px;
}

.album text {
  margin-left: 10px;
}
