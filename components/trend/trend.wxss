.trend {
  display: flex;
}

.trend-main, .trend-nickname, .trend-content, .trend-media{
  margin-bottom: 5px;
}

.trend-main {
  margin-left: 10px;
  width: 100%;
}

.trend-avatar image {
  width: 45px;
  height: 45px;
  border-radius: 4px;
}

.trend-media {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  grid-gap: 5px;
  width: 100%;
}

.trend-media-item {
  position: relative;
  width: 100%;
  padding-top: 100%;
}

.trend-media image {
  position: absolute;
  top: 0;
  width: 100%;
  height: 100%;
}

.trend-time {
  color: grey;
}

.trend-nickname {
  font-weight: 700;
  color: #606c8a;
}